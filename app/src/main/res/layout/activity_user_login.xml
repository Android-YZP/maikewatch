<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/user_login_background"
	>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:layout_marginLeft="@dimen/user_login_common_comptent_margin_left_or_right"
        android:layout_marginRight="@dimen/user_login_common_comptent_margin_left_or_right"
        >
        <ImageView 
            android:layout_width="@dimen/user_login_logo_width"
            android:layout_height="@dimen/user_login_logo_height"
            android:src="@drawable/user_login_logo"
            />
        <EditText 
            android:id="@+id/et_user_login_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_login_username_or_password_or_commit_height"
            android:layout_marginTop="@dimen/user_login_username_margin_top"
            android:drawableLeft="@drawable/user_login_username"
            android:drawablePadding="@dimen/user_login_drawable_padding"
            android:textColor="@color/common_white_color"
            android:hint="用户名/手机号/邮箱号"
            android:singleLine="true"
            />
        <EditText 
            android:id="@+id/et_user_login_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_login_username_or_password_or_commit_height"
            android:layout_marginTop="@dimen/user_login_password_margin_top"
            android:drawableLeft="@drawable/user_login_pwd"
            android:drawablePadding="@dimen/user_login_drawable_padding"
            android:textColor="@color/common_white_color"
            android:inputType="textPassword"
            android:hint="密码"
            android:singleLine="true"
            />
        
        <Button 
            android:id="@+id/btn_user_login_commit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_login_username_or_password_or_commit_height"
            android:text="登录"
            android:textSize="@dimen/user_login_commit_text_font_size"
            android:textColor="@color/common_white_color"
            android:gravity="center"
            android:layout_marginTop="@dimen/user_login_commit_margin_top"
            android:background="@drawable/selector_btn_user_login"
            />
         <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginTop="@dimen/user_login_reg_or_forget_margin_top"
             >
             <TextView 
                 android:id="@+id/tv_user_login_reg"
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="wrap_content"
                 android:text="注册"
                 android:textColor="@color/common_content_dark_text_font_color"
                 android:textSize="@dimen/user_login_reg_or_forget_font_size"
                 />
             <TextView 
                 android:id="@+id/tv_user_login_forget"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="忘记密码"
                 android:textColor="@color/common_content_dark_text_font_color"
                 android:textSize="@dimen/user_login_reg_or_forget_font_size"
                 />
         </LinearLayout>
    </LinearLayout>

    <Button 
        android:id="@+id/btn_user_login_visit_by_easy"
        android:layout_width="@dimen/user_login_btn_visit_by_easy_width"
        android:layout_height="@dimen/user_login_btn_visit_by_easy_height"
        android:layout_marginBottom="@dimen/user_login_btn_visit_by_easy_margin_bottom"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="随便看看"
        android:textColor="@color/common_content_dark_text_font_color"
        android:textSize="@dimen/user_login_visit_by_easy_font_size"
        android:background="@drawable/selector_visit_by_easy"
        />
</RelativeLayout>
